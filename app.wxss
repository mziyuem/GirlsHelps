/* app.wxss */
@import "styles/theme.wxss";

/* 全局样式 */
page {
  background-color: #FCF9EA;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', STHeiti, 'Microsoft Yahei', sans-serif;
}

/* 容器样式 */
.mobile-container {
  height: 100vh;
  background-color: #FCF9EA;
  position: relative;
  overflow: hidden;
}

/* 动画类 */
@keyframes fade-in {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.animate-fade-in {
  animation: fade-in 0.5s ease-out;
}

@keyframes pulse {
  0%, 100% {
    opacity: 0.4;
  }
  50% {
    opacity: 0.8;
  }
}

.animate-pulse {
  animation: pulse 2s infinite;
}

/* 按钮样式 */
.btn-primary {
  background: linear-gradient(135deg, #FFA4A4, #ff9090);
  color: white;
  border: none;
  border-radius: 12px;
  font-weight: bold;
  transition: all 0.3s ease;
}

.btn-primary:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.btn-secondary {
  background-color: #BADFDB;
  color: #2d3748;
  border: none;
  border-radius: 12px;
  font-weight: 600;
  transition: all 0.3s ease;
}

.btn-secondary:active {
  transform: scale(0.98);
  background-color: #a8d0ce;
}

/* 卡片样式 */
.card {
  background-color: white;
  border-radius: 16px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.07);
  border: 1px solid rgba(186, 223, 219, 0.2);
}

.card-elevated {
  box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
}

/* 输入框样式 */
.input-field {
  background-color: #f8fafc;
  border: 1px solid #e2e8f0;
  border-radius: 12px;
  padding: 12px 16px;
  font-size: 16px;
  transition: all 0.3s ease;
}

.input-field:focus {
  border-color: #BADFDB;
  background-color: white;
  box-shadow: 0 0 0 3px rgba(186, 223, 219, 0.1);
}

/* 模态框样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.3);
  backdrop-filter: blur(4px);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
  justify-content: center;
}

.modal-content {
  background-color: white;
  border-radius: 24px 24px 0 0;
  width: 100%;
  max-width: 100%;
  padding: 20px;
  position: relative;
  z-index: 1001;
  animation: slide-up 0.3s ease-out;
}

@keyframes slide-up {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

/* 导航栏样式 */
.nav-button {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 8px;
  transition: all 0.3s ease;
  position: relative;
}

.nav-button.active {
  color: #FFA4A4;
}

.nav-button .nav-icon {
  width: 24px;
  height: 24px;
  margin-bottom: 4px;
}

.nav-label {
  font-size: 10px;
  font-weight: 500;
}

/* 工具类 */
