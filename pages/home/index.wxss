/* pages/home/index.wxss */
@import "../../styles/theme.wxss";

/* 主容器 */
.home-container {
  min-height: 100%;
  height: 900px;
  position: relative;
  display: flex;
  flex-direction: column;
  background-color: var(--background-cream);
  background-color:#222352;
}

/* 背景图片 */
.home-background {
  display:flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  top: 0px;
  width: 430px;
  height:760px;
  z-index: 0;
  pointer-events: none;
}

/* 顶部状态栏 */
.top-header {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  padding: 16px;
  z-index: 1;
  pointer-events: none;
}

.header-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  pointer-events: auto;
}

.header-right {
  display: flex;
  align-items: center;
  gap: 12px;
}

/* 消息按钮 */
.message-button {
  position: relative;
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.message-button:active {
  transform: scale(0.95);
}

.message-icon {
  width: 24px;
  height: 24px;
}

.message-badge {
  position: absolute;
  top: 0;
  right: 0;
  width: 10px;
  height: 10px;
  background-color: #ff4444;
  border-radius: 50%;
  border: 2px solid white;
}

.app-title {
  font-size: 20px;
  font-weight: bold;
  color: white;
}

.pink-text {
  color: var(--primary-pink);
}

.status-badge {
  background-color: var(--primary-green);
  color: white;
  padding: 6px 12px;
  border-radius: 20px;
  font-size: 12px;
  animation: pulse 2s infinite;
}

.status-badge.requesting {
  animation: pulse 1.5s infinite;
}

/* 主内容区 */
.main-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  padding-bottom: 80px;
  z-index: 1;
}

/* 背景装饰 */
.background-decoration {
  position: absolute;
  inset: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0.05;
  pointer-events: none;
}

.bg-text {
  font-size: 200px;
  font-family: serif;
  color: var(--primary-green);
}

/* 欢迎文字 */
.welcome-text {
  margin-bottom: 110px;
  margin-right:120px;
  color: rgb(255, 235, 235);
  font-family: serif;
  text-align: center;
  max-width: 230px;
  animation: fade-in 0.5s ease-out;
}
.starImg{

}
.starBody{
  
}

/* 按钮容器 */
.button-container {
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  margin-bottom:80px;
}

/* 主要按钮 */
.ripple-button {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  background-color: white;
  box-shadow: 0 10px 30px rgba(186, 223, 219, 0.4);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  z-index: 10;
  transition: all 0.3s ease;
}

.ripple-button:active {
  transform: scale(0.9);
}

.ripple-button.requesting {
  animation: button-pulse 1.5s infinite;
}

/* finding状态：泛光效果 */
.ripple-button.finding {
  animation: finding-glow 2s ease-in-out infinite;
}

.ripple-button.finding::before {
  content: '';
  position: absolute;
  inset: -10px;
  border-radius: 50%;
  background: radial-gradient(circle, rgba(186, 223, 219, 0.6) 0%, transparent 70%);
  animation: glow-pulse 2s ease-in-out infinite;
  z-index: -1;
}

.ripple-button.finding::after {
  content: '';
  position: absolute;
  inset: -20px;
  border-radius: 50%;
  background: radial-gradient(circle, rgba(255, 164, 164, 0.4) 0%, transparent 70%);
  animation: glow-pulse 2s ease-in-out infinite 0.5s;
  z-index: -2;
}

@keyframes finding-glow {
  0%, 100% {
    box-shadow: 0 0 20px rgba(186, 223, 219, 0.6),
                0 0 40px rgba(186, 223, 219, 0.4),
                0 0 60px rgba(186, 223, 219, 0.2);
  }
  50% {
    box-shadow: 0 0 30px rgba(186, 223, 219, 0.8),
                0 0 60px rgba(186, 223, 219, 0.6),
                0 0 90px rgba(186, 223, 219, 0.4);
  }
}

@keyframes glow-pulse {
  0%, 100% {
    transform: scale(1);
    opacity: 0.6;
  }
  50% {
    transform: scale(1.2);
    opacity: 1;
  }
}

.ripple-button.active {
  background: linear-gradient(135deg, var(--primary-green), var(--primary-green-dark));
  color: white;
}

/* 涟漪效果 */
.ripples {
  position: absolute;
  inset: 0;
  pointer-events: none;
}

.ripple {
  position: absolute;
  width: 250px;
  height: 250px;
  border-radius: 50%;
  background-color: var(--primary-green);
  opacity: 0.4;
  animation: ripple-expand 2.5s infinite;
}

@keyframes ripple-expand {
  0% {
    transform: scale(0.5);
    opacity: 0.8;
  }
  100% {
    transform: scale(3.5);
    opacity: 0;
  }
}

/* 旋转边框 */
.rotating-border {
  position: absolute;
  inset: 12px;
  border: 3px solid var(--primary-green);
  border-radius: 50%;
  border-top-color: transparent;
  animation: rotate 3s linear infinite;
}

@keyframes rotate {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 按钮边框 */
.button-border {
  position: absolute;
  inset: 0;
  border: 6px solid var(--background-cream);
  border-radius: 50%;
  opacity: 0.6;
}

/* 按钮图标 */
.button-icon {
  font-size: 80px;
  margin-bottom: 16px;
  animation: float 1s ease-in-out infinite alternate;
  display: flex;
  align-items: center;
  justify-content: center;
}

.focus-image {
  width: 400px;
  height: 400px;
  object-fit: contain;
}

@keyframes float {
  0% { transform: translateY(0); }
  100% { transform: translateY(-5px); }
}

/* 按钮文字 */
.button-text {
  font-weight: bold;
  font-size: 18px;
  letter-spacing: 0.5px;
  color:white;
  font-size:30px;
  font-weight:400;
}

/* 树洞按钮 */
.tree-hole-button {
  position: absolute;
  top: -40%;
  right: 16%;
  transform: translateX(112px) translateY(-112px);
  z-index: 20;
  background-color: rgba(255, 255, 255, 0);
  padding: 12px;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.tree-hole-button:active {
  transform: translateX(112px) translateY(-112px) scale(0.95);
}

.tree-hole-icon {
  width: 100px;
  height: 100px;
  object-fit: contain;
}

/* 模态框样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.3);
  backdrop-filter: blur(4px);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
  justify-content: center;
  animation: fade-in 0.3s ease;
}

.request-modal {
  background-color: white;
  width: 100%;
  max-width: 100%;
  border-radius: 24px 24px 0 0;
  position: relative;
  z-index: 1001;
  animation: slide-up 0.3s ease;
  max-height: 90vh;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

/* 模态框头部 */
.modal-header {
  height: 160px;
  background-color: var(--background-cream);
  position: relative;
  border-bottom: 1px solid var(--border-light);
  border-radius: 24px 24px 0 0;
  overflow: hidden;
}

.map-preview {
  position: relative;
  width: 100%;
  height: 100%;
}

.map-grid {
  position: absolute;
  inset: 0;
  background-image: radial-gradient(var(--primary-green) 1px, transparent 1px);
  background-size: 20px 20px;
  opacity: 0.3;
}

.location-dot {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 16px;
  height: 16px;
  background-color: #3b82f6;
  border-radius: 50%;
  border: 2px solid white;
  box-shadow: 0 0 0 4px rgba(59, 130, 246, 0.3);
  animation: pulse 2s infinite;
}

.location-dot::after {
  content: '';
  position: absolute;
  bottom: -24px;
  left: 50%;
  transform: translateX(-50%);
  background-color: rgba(0, 0, 0, 0.8);
  color: white;
  padding: 4px 8px;
  border-radius: 12px;
  font-size: 10px;
  white-space: nowrap;
}

.close-button {
  position: absolute;
  top: 12px;
  right: 12px;
  width: 36px;
  height: 36px;
  background-color: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(4px);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.close-button:active {
  background-color: white;
}

/* 模态框内容 */
.modal-content {
  padding: 24px;
  overflow-y: auto;
  flex: 1;
  box-sizing: border-box;
  padding-bottom: 100px;
}

.modal-title {
  font-size: 18px;
  font-weight: bold;
  color: header-content;
  text-align: left;
  margin-bottom: 0;
}

/* 模态框头部内容 */
.modal-header-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16px 20px;
  border-bottom: 1px solid var(--border-light);
  margin-bottom: 16px;
}

/* 模态框关闭按钮 */
.modal-close-button {
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20px;
  color: var(--text-gray);
  flex-shrink: 0;
}

.modal-close-button:active {
  background-color: rgba(0, 0, 0, 0.05);
  border-radius: 50%;
}

/* 帮助类型选择 */
.help-types {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16px;
  margin-bottom: 24px;
}

.help-type {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16px;
  border: 2px solid var(--border-light);
  border-radius: 16px;
  background-color: var(--background-cream);
  color: var(--text-gray);
  transition: all 0.3s ease;
}

.help-type.selected {
  border-color: var(--primary-pink);
  background-color: rgba(255, 164, 164, 0.1);
  color: var(--primary-pink);
  transform: scale(1.02);
  box-shadow: 0 4px 12px rgba(255, 164, 164, 0.2);
}

.help-type:active {
  transform: scale(0.98);
}

.type-icon {
  font-size: 24px;
}

.type-label {
  font-weight: 500;
  font-size: 16px;
}

/* 补充说明 */
.note-section {
  margin-bottom: 24px;
}

.note-label {
  display: block;
  font-size: 14px;
  font-weight: 500;
  color: var(--text-light);
  margin-bottom: 8px;
}

.note-input {
  width: 100%;
  padding: 16px;
  background-color: var(--background-cream);
  border: none;
  border-radius: 16px;
  font-size: 16px;
  color: white;
  border: 1px solid var(--border-light);
  transition: all 0.3s ease;
}

.note-input:focus {
  border-color: var(--primary-green);
  background-color: white;
  box-shadow: 0 0 0 3px rgba(186, 223, 219, 0.1);
}

/* 隐私提示 */
.privacy-notice {
  display: flex;
  gap: 12px;
  padding: 12px;
  background-color: rgba(59, 130, 246, 0.05);
  border-radius: 16px;
  margin-bottom: 24px;
}

.notice-icon {
  font-size: 16px;
  flex-shrink: 0;
  margin-top: 2px;
}

.notice-text {
  font-size: 12px;
  color: rgba(59, 130, 246, 0.8);
  line-height: 1.5;
}

/* 提交按钮 */
.submit-button {
  width: 100%;
  padding: 16px;
  background: linear-gradient(135deg, var(--primary-pink), #ff9090);
  color: rgb(0, 0, 0);
  border: none;
  border-radius: 16px;
  font-size: 18px;
  font-weight: bold;
  box-shadow: 0 4px 12px rgba(255, 164, 164, 0.3);
  transition: all 0.3s ease;
}

.submit-button:active {
  transform: scale(0.98);
  box-shadow: 0 2px 8px rgba(255, 164, 164, 0.3);
}

.submit-button:disabled {
  opacity: 0.5;
  transform: none;
}

/* 树洞模态框 */
.tree-hole-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 50;
  animation: fade-in 0.3s ease;
}

.tree-hole-overlay {
  position: absolute;
  inset: 0;
  background-color: rgba(252, 249, 234, 0.95);
  backdrop-filter: blur(4px);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24px;
}

.tree-hole-content {
  background-color: white;
  border-radius: 16px;
  box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
  width: 100%;
  max-width: 360px;
  position: relative;
  max-height: 85vh;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.tree-hole-header {
  padding: 16px 20px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid var(--border-light);
  flex-shrink: 0;
}

.tree-hole-title {
  font-size: 18px;
  font-family: serif;
  color: var(--text-dark);
  font-weight: 600;
}

.header-actions {
  display: flex;
  align-items: center;
  gap: 12px;
}

.reset-btn {
  font-size: 14px;
  color: var(--primary-green);
  padding: 6px 12px;
  border-radius: 8px;
  background-color: rgba(186, 223, 219, 0.1);
}

.close-tree-hole {
  width: 32px;
  height: 32px;
  background-color: rgba(0, 0, 0, 0.05);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--text-gray);
  font-size: 18px;
}

.tree-hole-body {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* 对话界面 */
.chat-step {
  display: flex;
  flex-direction: column;
  height: 100%;
  overflow: hidden;
}

.chat-messages {
  flex: 1;
  height: 0;
  padding: 16px 24px;
  overflow-y: auto;
  box-sizing: border-box;
}

.chat-intro {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
  margin-bottom: 16px;
  background: linear-gradient(135deg, rgba(255, 164, 164, 0.1), rgba(186, 223, 219, 0.1));
  border-radius: 12px;
}

.chat-bird {
  width: 48px;
  height: 48px;
  margin-bottom: 12px;
}

.intro-text {
  font-size: 14px;
  color: white;
  text-align: center;
}

/* 树洞聊天消息项 */
.tree-hole-message-item {
  margin-bottom: 16px;
}

/* 消息行 - 基础样式 */
.message-row {
  display: flex;
  align-items: flex-start;
  width: 100%;
}

/* 对方的消息行：靠左对齐 */
.message-row-left {
  justify-content: flex-start;
}

/* 自己的消息行：靠右对齐 */
.message-row-right {
  justify-content: flex-end;
}

/* AI头像 */
.ai-avatar {
  width: 48rpx;
  height: 48rpx;
  flex-shrink: 0;
  margin-right: 0;
}

.ai-avatar image {
  width: 100%;
  height: 100%;
}

/* 用户头像 */
.user-avatar {
  width: 48rpx;
  height: 48rpx;
  background: linear-gradient(135deg, #BADFDB, #CAEFEF);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: white;
  flex-shrink: 0;
  margin-left: 8rpx;
}

/* 消息内容区 */
.message-content {
  max-width: 400rpx;
  word-wrap: break-word;
}

/* 对方消息：头像在左边，消息内容左边距（与头像的间距） */
.message-row-left .message-content {
  margin-left: 8rpx;
  margin-right: 0;
}

/* 自己消息：头像在右边，消息内容无间距 */
.message-row-right .message-content {
  margin-left: 0;
  margin-right: 0;
}

/* 消息气泡 - 基础样式 */
.message-bubble {
  display: inline-block;
  padding: 16rpx 20rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  line-height: 1.5;
  word-wrap: break-word;
  word-break: break-all;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.06);
}

/* 对方气泡：白色，左上角直角 */
.message-bubble-left {
  background-color: #ffffff;
  color: #1a1a1a;
  border-top-left-radius: 4rpx;
}

/* 自己气泡：粉色渐变，右上角直角 */
.message-bubble-right {
  background: linear-gradient(135deg, var(--primary-pink), #ffb4b4);
  color: #d46363;
  border-top-right-radius: 4rpx;
}

/* 打字中提示 */
.typing-indicator {
  display: inline-flex;
  align-items: center;
  gap: 6rpx;
  padding: 16rpx 20rpx;
  background-color: #ffffff;
  border-radius: 12rpx;
  border-top-left-radius: 4rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.06);
}

.typing-dot {
  width: 10rpx;
  height: 10rpx;
  background-color: #b0b0b0;
  border-radius: 50%;
  animation: typing 1.4s infinite;
}

.typing-dot:nth-child(2) {
  animation-delay: 0.2s;
}

.typing-dot:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes typing {
  0%, 60%, 100% {
    opacity: 0.3;
    transform: scale(0.8);
  }
  30% {
    opacity: 1;
    transform: scale(1);
  }
}

/* 对话输入区域 */
.chat-input-area {
  padding: 12px 16px;
  border-top: 1px solid var(--border-light);
  display: flex;
  gap: 12px;
  align-items: flex-end;
  flex-shrink: 0;
  background-color: white;
}

.chat-input {
  flex: 1;
  padding: 10px 14px;
  border: 1px solid var(--border-light);
  border-radius: 16px;
  font-size: 15px;
  min-height: 40px;
  max-height: 120px;
  background-color: #f9f9f9;
}

.chat-input:focus {
  border-color: var(--primary-green);
  background-color: white;
}

.send-btn {
  padding: 10px 20px;
  background-color: #e0e0e0;
  color: var(--text-lighter);
  border-radius: 16px;
  font-size: 14px;
  font-weight: 500;
  transition: all 0.2s ease;
}

.send-btn.active {
  background: linear-gradient(135deg, var(--primary-pink), #ffb4b4);
  color: white;
}

.send-btn.active:active {
  transform: scale(0.95);
}

/* 输入步骤 */
.input-step {
  padding: 24px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.intro-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24px;
  margin-bottom: 20px;
  background: linear-gradient(135deg, rgba(255, 164, 164, 0.1), rgba(186, 223, 219, 0.1));
  border-radius: 16px;
  text-align: center;
}

.intro-bird {
  width: 64px;
  height: 64px;
  margin-bottom: 16px;
}

.intro-title {
  font-size: 22px;
  font-family: serif;
  color: white;
  margin-bottom: 8px;
  font-weight: 600;
}

.intro-subtitle {
  font-size: 14px;
  color: var(--primary-green);
  margin-bottom: 12px;
}

.intro-desc {
  font-size: 14px;
  color: white;
  line-height: 1.6;
}

.tree-hole-input {
  width: 100%;
  min-height: 120px;
  padding: 14px;
  border: 1px solid var(--border-light);
  border-radius: 12px;
  background-color: #f9f9f9;
  font-size: 15px;
  color:white;
  margin-bottom: 16px;
}

.tree-hole-input:focus {
  border-color: var(--primary-green);
  background-color: white;
}

.send-button {
  width: 100%;
  padding: 14px;
  background-color: #e0e0e0;
  color: var(--text-lighter);
  border-radius: 12px;
  font-size: 16px;
  font-weight: 500;
  transition: all 0.2s ease;
}

.send-button.active {
  background: linear-gradient(135deg, var(--primary-pink), #ffb4b4);
  color: white;
  box-shadow: 0 4px 12px rgba(255, 164, 164, 0.3);
}

.send-button.active:active {
  transform: scale(0.98);
}

/* 处理步骤 */
.processing-step {
  padding: 40px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.processing-card {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.processing-bird {
  width: 64px;
  height: 64px;
  margin-bottom: 16px;
  animation: breathe 2s infinite ease-in-out;
}

@keyframes breathe {
  0%, 100% {
    transform: scale(1);
    opacity: 0.8;
  }
  50% {
    transform: scale(1.05);
    opacity: 1;
  }
}

.processing-text {
  font-size: 16px;
  color: var(--text-gray);
}

/* 结果步骤 */
.result-step {
  width: 100%;
}

.result-card {
  background-color: white;
  padding: 24px;
  border-radius: 16px;
  box-shadow: 0 8px 24px rgba(255, 179, 189, 0.2);
  border: 1px solid rgba(255, 179, 189, 0.3);
  position: relative;
  transform: rotate(-1deg);
}

.result-image {
  width: 120px;
  height: 120px;
  background-color: var(--background-cream);
  border-radius: 16px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60px;
  margin: 0 auto 16px;
  position: relative;
}

.result-bird-image {
  width: 80px;
  height: 80px;
  object-fit: contain;
}

.result-role {
  position: absolute;
  bottom: 8px;
  right: 8px;
  background-color: rgba(255, 255, 255, 0.9);
  padding: 4px 8px;
  border-radius: 12px;
  font-size: 10px;
  color: var(--text-gray);
}

.result-text {
  font-family: serif;
  color: var(--text-dark);
  line-height: 1.6;
  margin-bottom: 24px;
  font-size: 16px;
}

.save-button {
  padding-top: 16px;
  border-top: 1px solid var(--border-light);
  text-align: center;
}

.save-button text {
  font-size: 12px;
  color: var(--primary-green);
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

/* 动画 */
@keyframes fade-in {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes slide-up {
  from { transform: translateY(100%); }
  to { transform: translateY(0); }
}

@keyframes pulse {
  0%, 100% { opacity: 0.4; }
  50% { opacity: 0.8; }
}

@keyframes button-pulse {
  0%, 100% {
    box-shadow: 0 10px 30px rgba(186, 223, 219, 0.4);
  }
  50% {
    box-shadow: 0 20px 50px rgba(186, 223, 219, 0.7);
  }
}