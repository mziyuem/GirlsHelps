/* pages/chat/index.wxss */
@import "../../styles/theme.wxss";

.chat-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

/* 聊天头部 */
.chat-header {
  background-color: white;
  padding: 12px 16px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid var(--border-light);
  flex-shrink: 0;
}

.header-left {
  width: 40px;
  display: flex;
  align-items: center;
}

.back-icon {
  width: 24px;
  height: 24px;
}

.header-center {
  flex: 1;
  text-align: center;
}

.header-title {
  font-size: 16px;
  font-weight: 500;
  color: var(--text-dark);
}

.header-right {
  width: 40px;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

/* 完成按钮 */
.complete-button {
  width: 36px;
  height: 36px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, var(--primary-green), var(--primary-green-dark));
  border-radius: 50%;
  box-shadow: 0 2px 8px rgba(186, 223, 219, 0.4);
}

.complete-icon {
  width: 20px;
  height: 20px;
  color: white;
  font-size: 20px;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 蜡烛横幅 */
.candle-banner {
  background: linear-gradient(135deg, rgba(255, 164, 164, 0.15), rgba(186, 223, 219, 0.15));
  padding: 12px 16px;
  display: flex;
  align-items: center;
  gap: 12px;
  flex-shrink: 0;
}

.candle-icon-wrapper {
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: white;
  border-radius: 50%;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.candle-icon {
  width: 24px;
  height: 24px;
  font-size: 24px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.candle-text {
  flex: 1;
  font-size: 14px;
  color: var(--text-dark);
}

/* 消息列表 */
.chat-messages {
  flex: 1;
  padding: 24rpx 32rpx;
  overflow-y: auto;
  height: 0;
  background-color: #f5f7fa;
}

/* 消息区域的滚动条样式 */
.chat-messages::-webkit-scrollbar {
  width: 4rpx;
}

.chat-messages::-webkit-scrollbar-track {
  background: transparent;
}

.chat-messages::-webkit-scrollbar-thumb {
  background: #cccccc;
  border-radius: 2rpx;
}

.chat-messages::-webkit-scrollbar-thumb:hover {
  background: #aaaaaa;
}

/* 消息项容器 */
.message-item {
  margin-bottom: 24rpx;
}

/* 消息行 - 基础样式 */
.message-row {
  display: flex;
  align-items: flex-start;
  width: 100%;
}

/* 对方的消息行：靠左对齐 */
.message-row-left {
  justify-content: flex-start;
}

/* 自己的消息行：靠右对齐 */
.message-row-right {
  justify-content: flex-end;
}

/* 头像 */
.message-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  flex-shrink: 0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 消息内容区 */
.message-content {
  max-width: 480rpx;
  word-wrap: break-word;
}

/* 对方消息：头像在左边，消息内容右边距（与头像的间距） */
.message-row-left .message-avatar {
  margin-right: 0;
}

.message-row-left .message-content {
  margin-left: 12rpx;
  margin-right: 0;
}

/* 自己消息：头像在右边，消息内容右边距（与头像的间距） */
.message-row-right .message-avatar {
  margin-left: 12rpx;
}

.message-row-right .message-content {
  margin-left: 0;
  margin-right: 0;
}

/* 消息气泡 - 基础样式 */
.message-bubble {
  display: inline-block;
  padding: 20rpx 24rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  line-height: 1.5;
  word-wrap: break-word;
  word-break: break-all;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

/* 对方气泡：白色，左上角直角 */
.message-bubble-left {
  background-color: #ffffff;
  color: #1a1a1a;
  border-top-left-radius: 4rpx;
}

/* 自己气泡：粉色渐变，右上角直角 */
.message-bubble-right {
  background: linear-gradient(135deg, #FFA4A4, #FFB4B4);
  color: #000000;
  border-top-right-radius: 4rpx;
}

/* 打字中提示 */
.typing-indicator {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  padding: 20rpx 24rpx;
  background-color: #ffffff;
  border-radius: 12rpx;
  border-top-left-radius: 4rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.typing-dot {
  width: 12rpx;
  height: 12rpx;
  background-color: #b0b0b0;
  border-radius: 50%;
  animation: typing 1.4s infinite;
}

.typing-dot:nth-child(2) {
  animation-delay: 0.2s;
}

.typing-dot:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes typing {
  0%, 60%, 100% {
    opacity: 0.3;
    transform: scale(0.8);
  }
  30% {
    opacity: 1;
    transform: scale(1);
  }
}

/* 输入区域 */
.chat-input-area {
  background-color: #ffffff;
  padding: 20rpx 24rpx;
  display: flex;
  align-items: flex-end;
  gap: 16rpx;
  border-top: 1rpx solid #f0f0f0;
  flex-shrink: 0;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.05);
  safe-area-inset-bottom: constant(safe-area-inset-bottom);
  safe-area-inset-bottom: env(safe-area-inset-bottom);
}

.chat-input {
  flex: 1;
  max-height: 120rpx;
  padding: 16rpx 20rpx;
  border: 1rpx solid #e8e8e8;
  border-radius: 20rpx;
  font-size: 28rpx;
  background-color: #f8f8f8;
  line-height: 1.4;
  transition: border-color 0.2s ease;
}

.chat-input:focus {
  border-color: #FFA4A4;
  background-color: #ffffff;
}

.send-button {
  width: 120rpx;
  height: 64rpx;
  background: linear-gradient(135deg, #FFA4A4, #FFB4B4);
  color: #ffffff;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  transition: all 0.2s ease;
  box-shadow: 0 2rpx 8rpx rgba(255, 164, 164, 0.3);
  flex-shrink: 0;
}

.send-button:not(.active) {
  background: linear-gradient(135deg, #cccccc, #dddddd);
  box-shadow: none;
  color: #666666;
}

.send-button.active:active {
  transform: scale(0.95);
  box-shadow: 0 1rpx 4rpx rgba(255, 164, 164, 0.5);
}

/* 帮助者列表弹窗 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
}

.helpers-modal {
  background-color: white;
  width: 100%;
  max-height: 60vh;
  border-radius: 24px 24px 0 0;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.modal-header {
  padding: 16px 20px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid var(--border-light);
}

.modal-title {
  font-size: 18px;
  font-weight: bold;
  color: var(--text-dark);
}

.modal-close {
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20px;
  color: var(--text-gray);
}

.helpers-list {
  flex: 1;
  overflow-y: auto;
  padding: 8px 0;
}

.helper-item {
  display: flex;
  align-items: center;
  padding: 16px 20px;
  gap: 12px;
  border-bottom: 1px solid var(--border-light);
  transition: background-color 0.2s;
}

.helper-item:active {
  background-color: #f9f9f9;
}

.helper-avatar {
  width: 44px;
  height: 44px;
  flex-shrink: 0;
}

.helper-avatar image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.helper-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.helper-name {
  font-size: 15px;
  font-weight: 500;
  color: var(--text-dark);
}

.helper-distance {
  font-size: 13px;
  color: var(--text-gray);
}

/* 消息动画效果 */
@keyframes messageSlideIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.message-item {
  animation: messageSlideIn 0.3s ease-out;
}

/* 完成互助弹窗 */
.complete-modal {
  background-color: white;
  width: 100%;
  max-height: 80vh;
  border-radius: 24px 24px 0 0;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.complete-content {
  padding: 24px;
  max-height: 70vh;
  overflow-y: auto;
}

.complete-tip {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 16px;
  background: linear-gradient(135deg, rgba(255, 164, 164, 0.1), rgba(186, 223, 219, 0.1));
  border-radius: 12px;
  margin-bottom: 24px;
}

.tip-icon {
  width: 32px;
  height: 32px;
  font-size: 24px;
  color: #FFA4A4;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
}

.complete-tip text {
  flex: 1;
  font-size: 14px;
  color: var(--text-dark);
}

.form-group {
  margin-bottom: 20px;
}

.form-label {
  display: block;
  font-size: 14px;
  font-weight: 500;
  color: var(--text-dark);
  margin-bottom: 8px;
}

.form-input {
  width: 100%;
  padding: 12px 16px;
  border: 1px solid #e8e8e8;
  border-radius: 12px;
  font-size: 14px;
  background-color: #f8f8f8;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #FFA4A4;
  background-color: #ffffff;
}

.form-textarea {
  width: 100%;
  min-height: 80px;
  padding: 12px 16px;
  border: 1px solid #e8e8e8;
  border-radius: 12px;
  font-size: 14px;
  background-color: #f8f8f8;
  box-sizing: border-box;
  line-height: 1.5;
}

.form-textarea:focus {
  border-color: #FFA4A4;
  background-color: #ffffff;
}

.complete-actions {
  display: flex;
  gap: 12px;
  margin-top: 24px;
}

.action-button {
  flex: 1;
  height: 48px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 12px;
  font-size: 16px;
  font-weight: 500;
  transition: all 0.2s ease;
}

.cancel-button {
  background-color: #f5f5f5;
  color: var(--text-gray);
}

.cancel-button:active {
  background-color: #ebebeb;
}

.confirm-button {
  background: linear-gradient(135deg, #FFA4A4, #FFB4B4);
  color: #ffffff;
  box-shadow: 0 2px 8px rgba(255, 164, 164, 0.3);
}

.confirm-button:active {
  transform: scale(0.98);
  box-shadow: 0 1px 4px rgba(255, 164, 164, 0.5);
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .chat-messages {
    padding: 16rpx 0;
  }

  .message-item {
    margin-bottom: 24rpx;
    padding: 0 16rpx;
  }

  .message-wrapper {
    max-width: 85%;
  }

  .message-avatar {
    width: 72rpx;
    height: 72rpx;
  }

  .message-bubble {
    padding: 20rpx;
    font-size: 26rpx;
    max-width: 450rpx;
  }

  .chat-input-area {
    padding: 16rpx 20rpx;
  }

  .chat-input {
    min-height: 60rpx;
    padding: 14rpx 18rpx;
    margin-right: 12rpx;
  }

  .send-button {
    width: 100rpx;
    height: 60rpx;
    font-size: 26rpx;
  }
}
