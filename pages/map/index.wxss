/* pages/map/index.wxss */
@import "../../styles/theme.wxss";

.map-container {
  position: absolute;
  inset: 0;
  background-color: var(--background-cream);
  border-radius: 42px;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 背景圆环 */
.background-rings {
  position: absolute;
  inset: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  pointer-events: none;
  opacity: 0.2;
}

.ring {
  border: 1px solid var(--primary-green);
  border-radius: 50%;
  position: absolute;
}

.ring-1 {
  width: 192px;
  height: 192px;
}

.ring-2 {
  width: 384px;
  height: 384px;
}

.ring-3 {
  width: 600px;
  height: 600px;
}

/* 用户中心点 */
.user-center {
  position: relative;
  z-index: 10;
}

.user-dot {
  width: 24px;
  height: 24px;
  background-color: var(--primary-green);
  border: 2px solid white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
  animation: pulse 2s infinite;
}

.location-icon {
  font-size: 12px;
  color: white;
  transform: rotate(45deg);
}

.user-label {
  position: absolute;
  bottom: -28px;
  left: 50%;
  transform: translateX(-50%);
  white-space: nowrap;
  font-size: 12px;
  color: var(--text-gray);
}

/* 地图点 */
.map-points {
  position: absolute;
  inset: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.map-point {
  position: absolute;
  width: 32px;
  height: 32px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
  transition: transform 0.2s ease;
  cursor: pointer;
}

.map-point:active {
  transform: scale(0.9) translate(var(--translate-x, 0), var(--translate-y, 0));
}

.map-point.seeker {
  background-color: rgba(186, 223, 219, 0.8);
}

.map-point.helper {
  background-color: rgba(255, 164, 164, 0.8);
}

.point-dot {
  width: 8px;
  height: 8px;
  background-color: white;
  border-radius: 50%;
  opacity: 0.8;
}

/* 底部面板 */
.bottom-sheet {
  position: absolute;
  bottom: 16px;
  left: 16px;
  right: 16px;
  background-color: white;
  padding: 16px;
  border-radius: 16px;
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
  z-index: 20;
  animation: slide-up 0.3s ease;
}

.sheet-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 8px;
}

.sheet-info {
  flex: 1;
}

.sheet-title {
  display: block;
  font-weight: bold;
  color: var(--text-dark);
  font-size: 16px;
}

.sheet-distance {
  display: block;
  font-size: 14px;
  color: var(--text-light);
  margin-top: 4px;
}

.close-btn {
  color: var(--text-lighter);
  font-size: 18px;
  padding: 4px;
  margin: -4px;
}

.close-btn:active {
  color: var(--text-gray);
}

.sheet-tags {
  margin-bottom: 16px;
}

.tag {
  display: inline-block;
  padding: 4px 8px;
  background-color: var(--background-cream);
  color: var(--text-gray);
  font-size: 12px;
  border-radius: 8px;
  border: 1px solid var(--primary-green);
}

.contact-btn {
  width: 100%;
  padding: 12px;
  background-color: var(--primary-green);
  color: white;
  font-weight: 600;
  border: none;
  border-radius: 12px;
  font-size: 16px;
  transition: all 0.3s ease;
}

.contact-btn:active {
  background-color: var(--primary-green-dark);
  transform: scale(0.98);
}

/* 动画 */
@keyframes slide-up {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes pulse {
  0%, 100% {
    opacity: 0.8;
  }
  50% {
    opacity: 1;
  }
}